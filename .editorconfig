# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Code files
[*.{cs,csx,axaml}]
indent_size = 4

# XAML files
[*.axaml]
indent_size = 4

# Project files
[*.{csproj,proj,projitems,shproj}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# XML config files
[*.{props,targets,config}]
indent_size = 2
