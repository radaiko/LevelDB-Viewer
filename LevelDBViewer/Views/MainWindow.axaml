<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:LevelDBViewer.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
        x:Class="LevelDBViewer.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="LevelDB Viewer"
        Width="1000" Height="600"
        MinWidth="800" MinHeight="500">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,Auto,*,Auto" Margin="10">
        
        <!-- Toolbar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10" Margin="0,0,0,10">
            <Button Command="{Binding OpenDatabaseCommand}" 
                    Content="Open Folder" 
                    IsEnabled="{Binding !IsDatabaseOpen}"
                    Padding="15,8"/>
            <Button Command="{Binding OpenDatabaseFromFileCommand}" 
                    Content="Open File" 
                    IsEnabled="{Binding !IsDatabaseOpen}"
                    Padding="15,8"/>
            <Button Command="{Binding CloseDatabaseCommand}" 
                    Content="Close Database" 
                    IsEnabled="{Binding IsDatabaseOpen}"
                    Padding="15,8"/>
            <Button Command="{Binding RepairDatabaseCommand}" 
                    Content="Repair Database" 
                    IsVisible="{Binding IsCorruptionDetected}"
                    Padding="15,8"
                    Background="#FF6B35"
                    Foreground="White"/>
            <TextBlock Text="{Binding TotalEntries, StringFormat='Total Entries: {0}'}" 
                       VerticalAlignment="Center" 
                       Margin="20,0,0,0"
                       FontWeight="SemiBold"/>
        </StackPanel>

        <!-- Search Bar -->
        <Border Grid.Row="1" 
                Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                CornerRadius="5"
                Padding="10"
                Margin="0,0,0,10">
            <Grid ColumnDefinitions="Auto,*">
                <TextBlock Grid.Column="0" 
                           Text="Search:" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0"
                           FontWeight="SemiBold"/>
                <TextBox Grid.Column="1" 
                         Text="{Binding SearchText}" 
                         Watermark="Search in keys, values, or hex..."
                         IsEnabled="{Binding IsDatabaseOpen}"/>
            </Grid>
        </Border>

        <!-- Data List -->
        <Border Grid.Row="2" 
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                BorderThickness="1"
                CornerRadius="5">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <ListBox ItemsSource="{Binding FilteredEntries}"
                         Background="Transparent"
                         BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                    BorderThickness="0,0,0,1"
                                    Padding="10"
                                    Margin="0">
                                <Grid ColumnDefinitions="Auto,*,Auto,*">
                                    <StackPanel Grid.Column="0" Spacing="5" Margin="0,0,20,0">
                                        <TextBlock Text="Key:" FontWeight="SemiBold" FontSize="11" Opacity="0.7"/>
                                        <SelectableTextBlock Text="{Binding Key}" 
                                                            FontFamily="Consolas,Courier New,monospace"
                                                            TextWrapping="Wrap"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1" Spacing="5" Margin="0,0,20,0">
                                        <TextBlock Text="Value:" FontWeight="SemiBold" FontSize="11" Opacity="0.7"/>
                                        <SelectableTextBlock Text="{Binding Value}" 
                                                            FontFamily="Consolas,Courier New,monospace"
                                                            TextWrapping="Wrap"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="2" Spacing="5" Margin="0,0,20,0">
                                        <TextBlock Text="Key (Hex):" FontWeight="SemiBold" FontSize="11" Opacity="0.7"/>
                                        <SelectableTextBlock Text="{Binding KeyHex}" 
                                                            FontFamily="Consolas,Courier New,monospace"
                                                            TextWrapping="Wrap"
                                                            FontSize="11"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="3" Spacing="5">
                                        <TextBlock Text="Value (Hex):" FontWeight="SemiBold" FontSize="11" Opacity="0.7"/>
                                        <SelectableTextBlock Text="{Binding ValueHex}" 
                                                            FontFamily="Consolas,Courier New,monospace"
                                                            TextWrapping="Wrap"
                                                            FontSize="11"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </ScrollViewer>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="3" 
                Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                CornerRadius="5"
                Padding="10"
                Margin="0,10,0,0">
            <SelectableTextBlock Text="{Binding StatusMessage}" 
                                 FontSize="12"
                                 Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
        </Border>
    </Grid>

</Window>
