<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:LevelDBViewer.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
        x:Class="LevelDBViewer.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="LevelDB Viewer"
        Width="1000" Height="600"
        MinWidth="800" MinHeight="500">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,Auto,*,Auto" Margin="10">
        
        <!-- Toolbar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10" Margin="0,0,0,10">
            <Button Command="{Binding OpenDatabaseCommand}" 
                    Content="Open Folder" 
                    IsEnabled="{Binding !IsDatabaseOpen}"
                    Padding="15,8"/>
            <Button Command="{Binding OpenDatabaseFromFileCommand}" 
                    Content="Open File" 
                    IsEnabled="{Binding !IsDatabaseOpen}"
                    Padding="15,8"/>
            <Button Command="{Binding CloseDatabaseCommand}" 
                    Content="Close Database" 
                    IsEnabled="{Binding IsDatabaseOpen}"
                    Padding="15,8"/>
            <Button Command="{Binding RepairDatabaseCommand}" 
                    Content="Repair Database" 
                    IsVisible="{Binding IsCorruptionDetected}"
                    Padding="15,8"
                    Background="#FF6B35"
                    Foreground="White"/>
            <TextBlock Text="{Binding TotalEntries, StringFormat='Total Entries: {0}'}" 
                       VerticalAlignment="Center" 
                       Margin="20,0,0,0"
                       FontWeight="SemiBold"/>
        </StackPanel>

        <!-- Search Bar -->
        <Border Grid.Row="1" 
                Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                CornerRadius="5"
                Padding="10"
                Margin="0,0,0,10">
            <Grid ColumnDefinitions="Auto,*">
                <TextBlock Grid.Column="0" 
                           Text="Search:" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0"
                           FontWeight="SemiBold"/>
                <TextBox Grid.Column="1" 
                         Text="{Binding SearchText}" 
                         Watermark="Search in keys, values, or hex..."
                         IsEnabled="{Binding IsDatabaseOpen}"/>
            </Grid>
        </Border>

        <!-- Data Grid -->
        <Border Grid.Row="2" 
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                BorderThickness="1"
                CornerRadius="5">
            <DataGrid ItemsSource="{Binding FilteredEntries}"
                      IsReadOnly="True"
                      GridLinesVisibility="Horizontal"
                      AutoGenerateColumns="False"
                      CanUserReorderColumns="True"
                      CanUserResizeColumns="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Key" 
                                        Binding="{Binding Key}" 
                                        Width="1.5*"
                                        MinWidth="150"/>
                    <DataGridTextColumn Header="Value" 
                                        Binding="{Binding Value}" 
                                        Width="2*"
                                        MinWidth="200"/>
                    <DataGridTextColumn Header="Key (Hex)" 
                                        Binding="{Binding KeyHex}" 
                                        Width="1.5*"
                                        MinWidth="150"/>
                    <DataGridTextColumn Header="Value (Hex)" 
                                        Binding="{Binding ValueHex}" 
                                        Width="2*"
                                        MinWidth="200"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="3" 
                Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                CornerRadius="5"
                Padding="10"
                Margin="0,10,0,0">
            <SelectableTextBlock Text="{Binding StatusMessage}" 
                                 FontSize="12"
                                 Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
        </Border>
    </Grid>

</Window>
